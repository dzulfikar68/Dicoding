<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.TeamActivity">
    <TextView android:id="@+id/name_team"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:textColor="@android:color/black"
              android:textSize="25dp"
              android:textStyle="bold"
              android:text="FC Name"/>
    <TextView android:id="@+id/national_team"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:textSize="12.5dp"
              android:text="-"
              android:textStyle="bold|italic"/>
    <TextView android:id="@+id/formed_team"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:textSize="12.5dp"
              android:textStyle="bold"/>
    <TextView android:id="@+id/website_team"
              android:layout_marginBottom="10dp"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12.5dp"
              android:textStyle="italic"/>
    <LinearLayout android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <ImageView android:id="@+id/badge_team"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="100dp"
                   android:layout_marginEnd="5dp"
                   android:layout_marginStart="10dp"
                   android:src="@drawable/ic_launcher_background"
                   android:layout_marginBottom="5dp"
                   android:layout_marginLeft="10dp" android:layout_marginRight="5dp"/>
        <ImageView android:id="@+id/jersey_team"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="100dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/ic_launcher_background"
                   android:layout_marginBottom="5dp"
                   android:layout_marginEnd="10dp" android:layout_marginStart="5dp"/>
    </LinearLayout>
    <TextView android:id="@+id/description_team"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="15dp"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:textSize="15dp"
              android:text="description"
              android:textColor="@android:color/black"
              android:maxLines="2"
              android:ellipsize="end"/>
    <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:textStyle="bold|italic"
              android:text="List of Player"/>
    <ProgressBar android:layout_marginTop="10dp" android:id="@+id/loading" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:layout_marginTop="30dp" android:visibility="gone" android:gravity="center_horizontal" android:textStyle="italic" android:id="@+id/alert" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:id="@+id/list_player_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>